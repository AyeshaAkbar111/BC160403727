<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:padding="10dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/male"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/men_seat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/male"
                    android:layout_marginLeft="35dp"
                    android:text="Male"/>

            </RelativeLayout>
            <View
                android:layout_width="0.9dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/new_color"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/fe_male"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/women_seat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/fe_male"
                    android:layout_marginLeft="35dp"
                    android:text="Female"/>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/seat_No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seat No"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dialog"
        android:gravity="center"
        android:textSize="18dp"/>
</RelativeLayout>