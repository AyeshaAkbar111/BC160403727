<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#3049A4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="goBack"
                android:src="@drawable/ic_arrow_back"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:id="@+id/design"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        android:padding="5dp"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/vehicleImg"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_bus"/>
            <TextView
                android:id="@+id/departure"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/card_view_back"
                android:hint="Lahore "
                android:layout_toRightOf="@+id/vehicleImg"/>

            <ImageView
                android:id="@+id/routeLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/departure"
                android:src="@drawable/manageroute"/>

            <TextView
                android:id="@+id/arrival"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Multan "
                android:gravity="center"
                android:background="@drawable/card_view_back"
                android:padding="10dp"
                android:layout_toRightOf="@+id/routeLine" />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/blue"
               android:layout_marginLeft="100dp"
               android:layout_marginRight="10dp"
                android:layout_below="@id/arrival"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wifi"
                android:layout_below="@+id/view"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="3dp"/>
            <ImageView
               android:id="@+id/headPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/headphones"
                android:layout_below="@+id/view"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/wifi"
                android:layout_marginTop="3dp"/>

            <ImageView
                android:id="@+id/seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/seatforall"
                android:layout_below="@+id/view"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/headPhone"
                android:layout_marginTop="3dp"/>

            <ImageView
                android:id="@+id/cup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cofeecup"
                android:layout_below="@+id/view"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/seat"
                android:layout_marginTop="3dp"/>
            <ImageView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tv"
                android:layout_below="@+id/view"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/cup"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicleImg"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:background="@drawable/card_view_back"
                android:hint="12:15 pm   "
                android:padding="5dp"/>
            <TextView
                android:id="@+id/today"
                android:layout_below="@+id/vehicleImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/blue"
                android:text="Day"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/time"/>
            <TextView
                android:id="@+id/day"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:layout_below="@+id/vehicleImg"
                android:layout_toRightOf="@+id/today"
                android:background="@drawable/card_view_back"
                android:layout_centerHorizontal="true"
                android:hint="  Sunday  "/>
            <TextView
                android:id="@+id/Rs"
                android:layout_below="@+id/vehicleImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/blue"
                android:text="Rs "
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/day"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
               android:src="@drawable/roadmap"
                android:layout_below="@+id/Rs"
               android:layout_marginLeft="200dp"/>
            <TextView
                android:id="@+id/fare"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/card_view_back"
                android:layout_below="@+id/vehicleImg"
                android:hint="7,00 "
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/Rs"/>
         <ImageView
             android:id="@+id/guideline"
             android:layout_width="wrap_content"
             android:layout_height="100dp"
             android:src="@drawable/guideline"
             android:layout_below="@+id/time"
             android:layout_marginLeft="85dp"/>
            <TextView
                android:id="@+id/returnTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/guideline"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:background="@drawable/card_view_back"
                android:hint="12:15 pm   "
                android:padding="5dp"/>
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/blue"
                android:layout_below="@+id/guideline"
                android:text="Type"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@+id/returnTime"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/vehicleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/guideline"
                android:hint="economy        "
                android:background="@drawable/card_view_back"
                android:gravity="center"
                android:layout_toRightOf="@+id/type"/>
            <TextView
                android:id="@+id/totalSeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/blue"
                android:text="Seat Left"
                android:layout_below="@+id/guideline"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/vehicleType"
                android:gravity="center"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_below="@+id/guideline"
                android:hint="20  "
                android:background="@drawable/card_view_back"
                android:gravity="center"
                android:layout_toRightOf="@+id/totalSeat"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/seats"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
               android:layout_centerHorizontal="true"
                android:layout_marginRight="30dp"
                android:text="Bookme" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>