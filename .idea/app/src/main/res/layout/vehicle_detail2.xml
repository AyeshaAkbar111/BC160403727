<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:background="@color/light_grey"
    app:cardCornerRadius="4dp"
    app:elevation="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:background="@color/light_grey"
        android:paddingRight="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/linear_header"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_bus"
                android:id="@+id/vehicle_img"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lahore"
                        android:textSize="20sp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:id="@+id/departure"/>

                    <ImageView
                        android:id="@+id/routeLine"
                        android:layout_width="40dp"
                        app:tint="@color/black"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/departure"
                        android:src="@drawable/manageroute"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gujranwala"
                        android:textSize="20sp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:id="@+id/arrival"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/black"
                    android:layout_marginTop="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/wifi"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/wifi"
                        android:layout_below="@+id/view"
                        android:layout_marginTop="5dp"/>
                    <ImageView
                        android:id="@+id/headPhone"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/headphones"
                        android:layout_below="@+id/view"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/wifi"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/seat"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/seatforall"
                        android:layout_below="@+id/view"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/headPhone"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/cup"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/cofeecup"
                        android:layout_below="@+id/view"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/seat"
                        android:layout_marginTop="5dp"/>
                    <ImageView
                        android:id="@+id/tv"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_tv"
                        android:layout_below="@+id/view"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/cup"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/middle"
            android:layout_below="@id/linear_header"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departure Time:"
                    android:id="@+id/tv1"
                    android:textColor="@color/darkgrey"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00 AM"
                    android:textSize="17sp"
                    android:textColor="@color/blue"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="3dp"
                    android:id="@+id/time"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:id="@+id/tv2"
                    android:layout_below="@id/time"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/darkgrey"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 Sept, 2021"
                    android:textSize="17sp"
                    android:textColor="@color/blue"
                    android:layout_below="@id/tv2"
                    android:layout_marginTop="3dp"
                    android:id="@+id/date"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday"
                    android:textSize="14sp"
                    android:textColor="@color/blue"
                    android:layout_below="@id/date"
                    android:layout_marginTop="3dp"
                    android:id="@+id/day"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:gravity="center|end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fare"
                    android:id="@+id/tv3"
                    android:textColor="@color/darkgrey"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="220Rs."
                    android:textSize="18sp"
                    android:textColor="@color/blue"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="1dp"
                    android:id="@+id/fare"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/darkgrey"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Economy"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="1dp"
                    android:id="@+id/vehicleType"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seats Left"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/darkgrey"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="2dp"
                    android:id="@+id/seats"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center"
            android:id="@+id/book"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/button_background"
            android:layout_below="@id/middle"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Me"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>